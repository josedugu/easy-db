{
  "name": "easydb",
  "displayName": "EasyDB - PostgreSQL Viewer",
  "description": "Visual database explorer for PostgreSQL with interactive credentials and table management",
  "version": "0.1.2",
  "publisher": "josedugu",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/josedugu/easy-db"
  },
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Data Science",
    "Other"
  ],
  "keywords": [
    "postgresql",
    "postgres",
    "sql",
    "database",
    "viewer",
    "easydb"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "type": "commonjs",
  "contributes": {
    "commands": [
      {
        "command": "postgresql.openDashboard",
        "title": "PostgreSQL: Open Explorer"
      },
      {
        "command": "postgresql.configureConnection",
        "title": "PostgreSQL: Configure Database Connection",
        "icon": "$(plug)"
      },
      {
        "command": "postgresql.clearCredentials",
        "title": "PostgreSQL: Clear Saved Credentials",
        "icon": "$(trash)"
      },
      {
        "command": "postgresql.refreshData",
        "title": "PostgreSQL: Refresh Data",
        "icon": "$(refresh)"
      },
      {
        "command": "postgresql.showLogs",
        "title": "PostgreSQL: Show Logs",
        "icon": "$(output)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "postgresqlExplorer",
          "title": "EasyDB",
          "icon": "resources/database.svg"
        }
      ]
    },
    "views": {
      "postgresqlExplorer": [
        {
          "id": "postgresqlExplorerView",
          "name": "Explorer"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "postgresql.openDashboard",
          "when": "true",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "build": "npm run compile && npm run webview:build",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "package:release": "vsce package && mv *.vsix releases/",
    "release": "npm run package:release && ./scripts/create-release.sh",
    "release:draft": "npm run package:release && ./scripts/create-release.sh --draft",
    "publish:vsx": "npm run build:all && npm run package:release && ./scripts/publish-openvsx.sh",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "webview:dev": "vite",
    "webview:build": "vite build",
    "build:all": "npm run compile && npm run webview:build"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "monaco-editor": "^0.54.0",
    "pg": "^8.11.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sql-formatter": "^15.6.10"
  },
  "devDependencies": {
    "@types/pg": "^8.11.6",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/vscode": "^1.85.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vscode/vsce": "^3.6.2",
    "vite": "^7.1.10"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
